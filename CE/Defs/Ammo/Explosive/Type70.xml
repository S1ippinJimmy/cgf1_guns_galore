<Defs>

    <ThingCategoryDef>
      <defName>AmmoType70Rockets</defName>
      <label>Type 70 Rockets</label>
      <parent>AmmoRockets</parent>
      <iconPath>UI/Icons/ThingCategories/CaliberRocket</iconPath>
    </ThingCategoryDef>
	
	<CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.coldwar.chinavietnam">
    <defName>AmmoSet_Type70Rocket</defName>
    <label>Type 70 Rockets</label>
	<ammoTypes>
	  <Ammo_Type70_HEAT>Bullet_Type70_HEAT</Ammo_Type70_HEAT>
	</ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== AmmoSet ========================== -->
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="Type70RocketBase" ParentName="MediumAmmoBase" Abstract="True" MayRequire="cgf1.gunsgalore.coldwar.chinavietnam">
    <description>Anti-tank rockets used in the Chinese Type 70 rocket launcher.</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting_TableMachining</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoType70Rockets</li>
    </thingCategories>
    <stackLimit>25</stackLimit>
    <cookOffFlashScale>40</cookOffFlashScale>
    <cookOffSound>MortarBomb_Explode</cookOffSound>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Type70RocketBase" MayRequire="cgf1.gunsgalore.coldwar.chinavietnam">
    <defName>Ammo_Type70_HEAT</defName>
    <label>Type 70 Rocket (HEAT)</label>
    <graphicData>
      <texPath>CGF1/Ammo/Type70</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>51.74</MarketValue>
	    <Mass>1.8</Mass>
	    <Bulk>4.19</Bulk>
    </statBases>
	<ammoClass>RocketHEAT</ammoClass>
	<detonateProjectile>Bullet_Type70_HEAT</detonateProjectile>
  </ThingDef>
	<!-- ================== Projectiles ================== -->

	<ThingDef Name="BaseType70Rocket" ParentName="BaseExplosiveBullet" Abstract="true" MayRequire="cgf1.gunsgalore.coldwar.chinavietnam">
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>60</speed>
			<soundAmbient>RocketPropelledLoop_Small</soundAmbient>
		</projectile>
	</ThingDef>	

	<ThingDef ParentName="BaseType70Rocket" MayRequire="cgf1.gunsgalore.coldwar.chinavietnam">
		<defName>Bullet_Type70_HEAT</defName>
		<label>Type70 rocket (HEAT)</label>
		<graphicData>
			<texPath>CGF1/Projectile/Type70</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<damageAmountBase>208</damageAmountBase>
      <armorPenetrationSharp>300</armorPenetrationSharp>
      <armorPenetrationBlunt>48.555</armorPenetrationBlunt>
		</projectile>
		<comps>
		  <li Class="CombatExtended.CompProperties_ExplosiveCE">
			<damageAmountBase>141</damageAmountBase>
			<explosiveDamageType>Bomb</explosiveDamageType>
			<explosiveRadius>1.5</explosiveRadius>
			<explosionSound>MortarBomb_Explode</explosionSound>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		  </li>
		  <li Class="CombatExtended.CompProperties_Fragments">
			<fragments>
				<Fragment_Large>2</Fragment_Large>
			  <Fragment_Small>45</Fragment_Small>
			</fragments>
		  </li>
		</comps>
	</ThingDef>
  
	<!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="LauncherAmmoRecipeBase" MayRequire="cgf1.gunsgalore.coldwar.chinavietnam">
