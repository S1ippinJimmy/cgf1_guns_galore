<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo127mmRIM116A</defName>
		<label>127mm RIM-116 Missiles</label>
		<parent>AmmoRockets</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRocket</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.modern.usa">
		<defName>AmmoSet_127mmRIM116A</defName>
		<label>127mm RIM-116 Missiles</label>
		<ammoTypes>
			<Ammo_127mmRIM116A_Frag>Bullet_127mmRIM116A_Frag</Ammo_127mmRIM116A_Frag>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="127mmRIM116ABase" ParentName="MediumAmmoBase" Abstract="True" MayRequire="cgf1.gunsgalore.modern.usa">
		<description>127mm anti-aircraft shaped warhead designed for the RIM-116 naval launcher.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo127mmRIM116A</li>
		</thingCategories>
		<stackLimit>20</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="127mmRIM116ABase" MayRequire="cgf1.gunsgalore.modern.usa">
		<defName>Ammo_127mmRIM116A_Frag</defName>
		<label>127mm RIM-116 missile</label>
		<graphicData>
			<texPath>CGF1/Ammo/RIM116</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>75.00</MarketValue>
			<Mass>12</Mass>
			<Bulk>23.50</Bulk>
		</statBases>
		<ammoClass>RocketFrag</ammoClass>
		<detonateProjectile>Bullet_127mmRIM116A_Frag</detonateProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base127mmRIM116A" ParentName="BaseExplosiveBullet" Abstract="true">
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>75</speed>
			<soundAmbient>RocketPropelledLoop_Small</soundAmbient>
		</projectile>
	</ThingDef>	

	<ThingDef ParentName="Base127mmRIM116A" MayRequire="cgf1.gunsgalore.modern.usa">
		<defName>Bullet_127mmRIM116A_Frag</defName>
		<label>127mm RIM-116 missile (AA)</label>
		<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
		<graphicData>
			<texPath>CGF1/Projectile/Blowpipe</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<explosionRadius>1.5</explosionRadius>
			<damageDef>Bomb</damageDef>
			<armorPenetrationSharp>0</armorPenetrationSharp>
			<damageAmountBase>65</damageAmountBase>
			<armorPenetrationBlunt>0</armorPenetrationBlunt>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		</projectile>
		<comps>
		  <li Class="CombatExtended.CompProperties_Fragments">
			<fragments>
				<Fragment_Large>20</Fragment_Large>
			  <Fragment_Small>160</Fragment_Small>
			</fragments>
		  </li>
		</comps>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="LauncherAmmoRecipeBase" MayRequire="cgf1.gunsgalore.modern.usa">
		<defName>MakeAmmo_127mmRIM116A_Frag</defName>
		<label>make 127mm RIM-116 AA missiles x5</label>
		<description>Craft 5 127mm RIM-116 AA missiles.</description>
		<jobString>Making 127mm RIM-116 AA missiles.</jobString>
		<workAmount>12000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>64</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_127mmRIM116A_Frag>5</Ammo_127mmRIM116A_Frag>
		</products>
	</RecipeDef>

</Defs>
