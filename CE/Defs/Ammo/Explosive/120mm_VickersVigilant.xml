		<label>120mm Vigilant Rockets</label>
		<parent>AmmoRockets</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRocket</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.coldwar.uk">
		<defName>AmmoSet_120mmVigilant</defName>
		<label>120mm Vigilant Rockets</label>
		<ammoTypes>
			<Ammo_120mmVigilant_HEAT>Bullet_120mmVigilant_HEAT</Ammo_120mmVigilant_HEAT>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="120mmVigilantBase" ParentName="MediumAmmoBase" Abstract="True" MayRequire="cgf1.gunsgalore.coldwar.uk">
		<description>120mm warhead designed for the Vickers Vigilant ATGM platform.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo120mmVigilant</li>
		</thingCategories>
		<stackLimit>25</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="120mmVigilantBase" MayRequire="cgf1.gunsgalore.coldwar.uk">
		<defName>Ammo_120mmVigilant_HEAT</defName>
		<label>120mm Vigilant rocket</label>
		<graphicData>
			<texPath>CGF1/Ammo/Vigilant</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>67.92</MarketValue>
			<Mass>6</Mass>
			<Bulk>17.55</Bulk>
		</statBases>
		<ammoClass>RocketHEAT</ammoClass>
		<detonateProjectile>Bullet_120mmVigilant_HEAT</detonateProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base120mmVigilant" ParentName="BaseExplosiveBullet" Abstract="true" MayRequire="cgf1.gunsgalore.coldwar.uk">
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>55</speed>
			<soundAmbient>RocketPropelledLoop_Small</soundAmbient>
		</projectile>
	</ThingDef>	

	<ThingDef ParentName="Base120mmVigilant" MayRequire="cgf1.gunsgalore.coldwar.uk">
		<defName>Bullet_120mmVigilant_HEAT</defName>
		<label>120mm Vigilant rocket (HEAT)</label>
		<graphicData>
			<texPath>CGF1/Projectile/Vigilant</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<damageAmountBase>248</damageAmountBase>
			<armorPenetrationSharp>600</armorPenetrationSharp>
			<armorPenetrationBlunt>39.494</armorPenetrationBlunt>
		</projectile>
		<comps>
		  <li Class="CombatExtended.CompProperties_ExplosiveCE">
			<damageAmountBase>132</damageAmountBase>
			<explosiveDamageType>Bomb</explosiveDamageType>
			<explosiveRadius>1</explosiveRadius>
			<explosionSound>MortarBomb_Explode</explosionSound>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		  </li>
		  <li Class="CombatExtended.CompProperties_Fragments">
			<fragments>
				<Fragment_Large>5</Fragment_Large>
			  <Fragment_Small>31</Fragment_Small>
			</fragments>
		  </li>
		</comps>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

