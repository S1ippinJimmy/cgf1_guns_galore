<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo70mmFIM92</defName>
		<label>70mm FIM-92 Stinger Missiles</label>
		<parent>AmmoRockets</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRocket</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef MayRequireAnyOf="cgf1.gunsgalore.coldwar.usa,cgf1.gunsgalore.modern.usa">
		<defName>AmmoSet_70mmFIM92</defName>
		<label>70mm FIM-92 Stinger Missiles</label>
		<ammoTypes>
			<Ammo_70mmFIM92A_Frag>Bullet_70mmFIM92A_Frag</Ammo_70mmFIM92A_Frag>
			<Ammo_70mmFIM92J_Frag>Bullet_70mmFIM92J_Frag</Ammo_70mmFIM92J_Frag>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="70mmFIM92Base" ParentName="MediumAmmoBase" Abstract="True" MayRequireAnyOf="cgf1.gunsgalore.coldwar.usa,cgf1.gunsgalore.modern.usa">
		<description>70mm anti-aircraft shaped warhead designed for the FIM-92 Stinger launcher.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo70mmFIM92</li>
		</thingCategories>
		<stackLimit>20</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="70mmFIM92Base" MayRequireAnyOf="cgf1.gunsgalore.coldwar.usa,cgf1.gunsgalore.modern.usa">
		<defName>Ammo_70mmFIM92A_Frag</defName>
		<label>70mm FIM-92A Stinger missile</label>
		<graphicData>
			<texPath>CGF1/Ammo/FIM92A</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>75.00</MarketValue>
			<Mass>8</Mass>
			<Bulk>19.50</Bulk>
		</statBases>
		<ammoClass>RocketFrag</ammoClass>
		<detonateProjectile>Bullet_70mmFIM92A_Frag</detonateProjectile>
	</ThingDef>
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="70mmFIM92Base" MayRequireAnyOf="cgf1.gunsgalore.coldwar.usa,cgf1.gunsgalore.modern.usa">
		<defName>Ammo_70mmFIM92J_Frag</defName>
		<label>70mm FIM-92J Stinger missile</label>
		<graphicData>
			<texPath>CGF1/Ammo/FIM92J</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>80.00</MarketValue>
			<Mass>8.2</Mass>
			<Bulk>19.75</Bulk>
		</statBases>
		<ammoClass>RocketFrag</ammoClass>
		<detonateProjectile>Bullet_70mmFIM92J_Frag</detonateProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base70mmFIM92" ParentName="BaseExplosiveBullet" Abstract="true">
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>55</speed>
			<soundAmbient>RocketPropelledLoop_Small</soundAmbient>
		</projectile>
	</ThingDef>	

	<ThingDef ParentName="Base70mmFIM92" MayRequireAnyOf="cgf1.gunsgalore.coldwar.usa,cgf1.gunsgalore.modern.usa">
		<defName>Bullet_70mmFIM92A_Frag</defName>
		<label>70mm FIM-92A Stinger missile (AA)</label>
		<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
		<graphicData>
			<texPath>CGF1/Projectile/Blowpipe</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<explosionRadius>1.5</explosionRadius>
			<damageDef>Bomb</damageDef>
			<armorPenetrationSharp>0</armorPenetrationSharp>
			<damageAmountBase>58</damageAmountBase>
			<armorPenetrationBlunt>0</armorPenetrationBlunt>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		</projectile>
		<comps>
		  <li Class="CombatExtended.CompProperties_Fragments">
			<fragments>
				<Fragment_Large>20</Fragment_Large>
			  <Fragment_Small>140</Fragment_Small>
			</fragments>
		  </li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="Base70mmFIM92" MayRequireAnyOf="cgf1.gunsgalore.coldwar.usa,cgf1.gunsgalore.modern.usa">
		<defName>Bullet_70mmFIM92J_Frag</defName>
