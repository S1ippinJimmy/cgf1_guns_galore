    <statBases>
      <Mass>0.3</Mass>
      <Bulk>0.40</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting_TableMachining</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoGewehr98RifleGrenades</li>
    </thingCategories>
    <stackLimit>500</stackLimit>
    <cookOffFlashScale>100</cookOffFlashScale>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="Gewehr98RifleGrenadeBase" MayRequire="cgf1.gunsgalore.greatwar.centralpowers">
    <defName>Ammo_Gewehr98RifleGrenade_M1913_</defName>
	<description>German Great War-era rifle grenade adapted for G98 rifles.</description>
    <label>Gewehr 98 M1913 grenade</label>
    <graphicData>
      <texPath>CGF1/Ammo/Karabingranate/M1913</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
