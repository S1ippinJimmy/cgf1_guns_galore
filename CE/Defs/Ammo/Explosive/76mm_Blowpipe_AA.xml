<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo76mmBlowpipe</defName>
		<label>76mm Blowpipe Missiles</label>
		<parent>AmmoRockets</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRocket</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.coldwar.uk">
		<defName>AmmoSet_76mmBlowpipe</defName>
		<label>76mm Blowpipe Missiles</label>
		<ammoTypes>
			<Ammo_76mmBlowpipe_Frag>Bullet_76mmBlowpipe_Frag</Ammo_76mmBlowpipe_Frag>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="76mmBlowpipeBase" ParentName="MediumAmmoBase" Abstract="True" MayRequire="cgf1.gunsgalore.coldwar.uk">
		<description>76mm anti-aircraft shaped warhead designed for the Shorts Blowpipe launcher.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo76mmBlowpipe</li>
		</thingCategories>
		<stackLimit>20</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="76mmBlowpipeBase" MayRequire="cgf1.gunsgalore.coldwar.uk">
		<defName>Ammo_76mmBlowpipe_Frag</defName>
		<label>76mm Blowpipe missile</label>
		<graphicData>
			<texPath>CGF1/Ammo/Shorts_Blowpipe</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>75.00</MarketValue>
			<Mass>8</Mass>
			<Bulk>19.50</Bulk>
		</statBases>
		<ammoClass>RocketFrag</ammoClass>
		<detonateProjectile>Bullet_76mmBlowpipe_Frag</detonateProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base76mmBlowpipe" ParentName="BaseExplosiveBullet" Abstract="true" MayRequire="cgf1.gunsgalore.coldwar.uk">
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>55</speed>
			<soundAmbient>RocketPropelledLoop_Small</soundAmbient>
		</projectile>
	</ThingDef>	

	<ThingDef ParentName="Base76mmBlowpipe" MayRequire="cgf1.gunsgalore.coldwar.uk">
		<defName>Bullet_76mmBlowpipe_Frag</defName>
		<label>76mm Blowpipe missile (AA)</label>
		<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
		<graphicData>
			<texPath>CGF1/Projectile/Blowpipe</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<explosionRadius>1.5</explosionRadius>
			<damageDef>Bomb</damageDef>
			<armorPenetrationSharp>0</armorPenetrationSharp>
			<damageAmountBase>58</damageAmountBase>
			<armorPenetrationBlunt>0</armorPenetrationBlunt>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		</projectile>
		<comps>
		  <li Class="CombatExtended.CompProperties_Fragments">
			<fragments>
				<Fragment_Large>20</Fragment_Large>
			  <Fragment_Small>140</Fragment_Small>
			</fragments>
		  </li>
		</comps>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="LauncherAmmoRecipeBase" MayRequire="cgf1.gunsgalore.coldwar.uk">
		<defName>MakeAmmo_76mmBlowpipe_Frag</defName>
		<label>make 76mm Blowpipe AA missiles x5</label>
		<description>Craft 5 76mm Blowpipe AA missiles.</description>
		<jobString>Making 76mm Blowpipe AA missiles.</jobString>
		<workAmount>12000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>64</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_76mmBlowpipe_Frag>5</Ammo_76mmBlowpipe_Frag>
		</products>
	</RecipeDef>

</Defs>
