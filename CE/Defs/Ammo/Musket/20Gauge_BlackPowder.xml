	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="20Gauge_BlackPowderBase" ParentName="AmmoBase" Abstract="True">
		<description>A brass cartridge containing several round projectiles and black powder, fired by industrial era shotguns.</description>
		<statBases>
			<Mass>0.044</Mass>
			<Bulk>0.05</Bulk>
		</statBases>
		<tradeTags>
		  <li>CE_PreIndustrialAmmo</li>
		  <li>CE_AutoEnableTrade</li>
		  <li>CE_AutoEnableCrafting</li>
		  <li>CE_AutoEnableCrafting_FueledSmithy</li>
		  <li>CE_AutoEnableCrafting_ElectricSmithy</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo20Gauge_BlackPowder</li>
		</thingCategories>
		<techLevel>Medieval</techLevel>
		<stackLimit>1000</stackLimit>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="20Gauge_BlackPowderBase">
		<defName>Ammo_20Gauge_BlackPowder</defName>
		<label>20 Gauge Black Powder</label>
		<graphicData>
			<texPath>CGF1/Ammo/Shotgun/BlackPowder</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.18</MarketValue>
		</statBases>
		<ammoClass>BuckShot</ammoClass>
	</ThingDef>
	
	<!-- ================== Projectile ================== -->
	
	<ThingDef Name="20Gauge_BlackPowderBullet" ParentName="BaseBulletCE" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Shotgun_Pellet</texPath>
