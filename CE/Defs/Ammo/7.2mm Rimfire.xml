<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingCategoryDef>
    <defName>Ammo72mmRimfire</defName>
    <label>7.2mm Rimfire</label>
    <parent>AmmoPistols</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberPistol</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.industrialage.i">
    <defName>AmmoSet_72mmRimfire</defName>
    <label>7.2mm Rimfire</label>
    <ammoTypes>
      <Ammo_72mmRimfire_FMJ>Bullet_72mmRimfire_FMJ</Ammo_72mmRimfire_FMJ>
    </ammoTypes>
		<similarTo>AmmoSet_Pistol</similarTo>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="72mmRimfireBase" ParentName="SmallAmmoBase" Abstract="True" MayRequire="cgf1.gunsgalore.industrialage.i">
    <description>Old rimfire pistol cartridge used in revolvers.</description>
    <statBases>
      <Mass>0.002</Mass>
      <Bulk>0.01</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>Ammo72mmRimfire</li>
    </thingCategories>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="72mmRimfireBase" MayRequire="cgf1.gunsgalore.industrialage.i">
    <defName>Ammo_72mmRimfire_FMJ</defName>
    <label>7.2mm Rimfire cartridge (FMJ)</label>
    <graphicData>
      <texPath>Things/Ammo/Pistol/FMJ</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.02</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
    <cookOffProjectile>Bullet_72mmRimfire_FMJ</cookOffProjectile>
  </ThingDef>

  <!-- ================== Projectiles ================== -->

  <ThingDef Name="Base72mmRimfireBullet" ParentName="BaseBulletCE" Abstract="true" MayRequire="cgf1.gunsgalore.industrialage.i">
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <speed>24</speed>
      <dropsCasings>true</dropsCasings>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="Base72mmRimfireBullet" MayRequire="cgf1.gunsgalore.industrialage.i">
    <defName>Bullet_72mmRimfire_FMJ</defName>
    <label>7.2mm Rimfire bullet (FMJ)</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>4</damageAmountBase>
      <armorPenetrationSharp>1</armorPenetrationSharp>
      <armorPenetrationBlunt>1.2</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <!-- Standard manufacture -->
  <RecipeDef ParentName="AmmoRecipeBase" MayRequire="cgf1.gunsgalore.industrialage.i">
    <defName>MakeAmmo_72mmRimfire_FMJ</defName>
    <label>make 7.2mm Rimfire (FMJ) cartridge x500</label>
    <description>Craft 500 7.2mm Rimfire (FMJ) cartridges.</description>
    <jobString>Making 7.2mm Rimfire (FMJ) cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_72mmRimfire_FMJ>500</Ammo_72mmRimfire_FMJ>
    </products>
    <workAmount>400</workAmount>
  </RecipeDef>

</Defs>