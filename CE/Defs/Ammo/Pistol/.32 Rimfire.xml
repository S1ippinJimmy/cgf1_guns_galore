	<ThingDef Name="Base32RimfireBullet" ParentName="BaseBulletCE" Abstract="true" MayRequire="cgf1.gunsgalore.americancivilwar.i">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>66</speed>
			<dropsCasings>true</dropsCasings>
			<casingMoteDefname>Fleck_PistolAmmoCasings</casingMoteDefname>
			<casingFilthDefname>Filth_PistolAmmoCasings</casingFilthDefname>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base32RimfireBullet" MayRequire="cgf1.gunsgalore.americancivilwar.i">
		<defName>Bullet_32Rimfire_FMJ</defName>
		<label>.32 Rimfire bullet (FMJ)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>9</damageAmountBase>
			<armorPenetrationSharp>3</armorPenetrationSharp>
