<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingCategoryDef>
    <defName>Ammo41Volcanic</defName>
    <label>.41 Volcanic</label>
    <parent>AmmoPistols</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberPistol</iconPath>
  </ThingCategoryDef>

  <!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.americancivilwar.i">
    <defName>AmmoSet_41Volcanic</defName>
    <label>.41 Volcanic</label>
    <ammoTypes>
      <Ammo_41Volcanic_FMJ>Bullet_41Volcanic_FMJ</Ammo_41Volcanic_FMJ>
    </ammoTypes>
		<similarTo>AmmoSet_Pistol</similarTo>
  </CombatExtended.AmmoSetDef>

  <!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="41VolcanicBase" ParentName="SmallAmmoBase" Abstract="True" MayRequire="cgf1.gunsgalore.americancivilwar.i">
    <description>A 'caseless' rocket-ball style cartridge used in repeating pistols and rifles.</description>
    <statBases>
      <Mass>0.007</Mass>
      <Bulk>0.04</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>Ammo41Volcanic</li>
    </thingCategories>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="41VolcanicBase" MayRequire="cgf1.gunsgalore.americancivilwar.i">
    <defName>Ammo_41Volcanic_FMJ</defName>
    <label>.41 Volcanic cartridge (FMJ)</label>
    <graphicData>
      <texPath>Things/Ammo/Pistol/FMJ</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>0.04</MarketValue>
    </statBases>
    <ammoClass>FullMetalJacket</ammoClass>
    <cookOffProjectile>Bullet_41Volcanic_FMJ</cookOffProjectile>
  </ThingDef>

  <!-- ================== Projectiles ================== -->

  <ThingDef Name="Base41VolcanicBullet" ParentName="BaseBulletCE" Abstract="true" MayRequire="cgf1.gunsgalore.americancivilwar.i">
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageDef>Bullet</damageDef>
      <speed>20</speed>
      <dropsCasings>true</dropsCasings>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="Base41VolcanicBullet" MayRequire="cgf1.gunsgalore.americancivilwar.i">
    <defName>Bullet_41Volcanic_FMJ</defName>
    <label>.41 Volcanic bullet (FMJ)</label>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <damageAmountBase>4</damageAmountBase>
      <armorPenetrationSharp>1</armorPenetrationSharp>
      <armorPenetrationBlunt>0.4</armorPenetrationBlunt>
    </projectile>
  </ThingDef>

  <!-- ==================== Recipes ========================== -->

  <!-- Standard manufacture -->
  <RecipeDef ParentName="AmmoRecipeBase" MayRequire="cgf1.gunsgalore.americancivilwar.i">
    <defName>MakeAmmo_41Volcanic_FMJ</defName>
    <label>make .41 Volcanic (FMJ) cartridge x500</label>
    <description>Craft 500 .41 Volcanic (FMJ) cartridges.</description>
    <jobString>Making .41 Volcanic (FMJ) cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_41Volcanic_FMJ>500</Ammo_41Volcanic_FMJ>
    </products>
    <workAmount>800</workAmount>
  </RecipeDef>

</Defs>