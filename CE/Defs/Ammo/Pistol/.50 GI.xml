<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo50GI</defName>
		<label>.50 GI</label>
		<parent>AmmoPistols</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberPistol</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.magnum.i">
		<defName>AmmoSet_50GI</defName>
		<label>.50 GI</label>
		<ammoTypes>
			<Ammo_50GI_FMJ>Bullet_50GI_FMJ</Ammo_50GI_FMJ>
			<Ammo_50GI_AP>Bullet_50GI_AP</Ammo_50GI_AP>
			<Ammo_50GI_HP>Bullet_50GI_HP</Ammo_50GI_HP>			
		</ammoTypes>
		<similarTo>AmmoSet_Pistol</similarTo>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="50GIBase" ParentName="SmallAmmoBase" Abstract="True" MayRequire="cgf1.gunsgalore.magnum.i">
		<description>Wildcat pistol cartridge designed to perform similarly to .45 ACP, but with supposedly superior accuracy and ballistics.</description>
		<statBases>
			<Mass>0.025</Mass>
			<Bulk>0.01</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo50GI</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="50GIBase" MayRequire="cgf1.gunsgalore.magnum.i">
		<defName>Ammo_50GI_FMJ</defName>
		<label>.50 GI cartridge (FMJ)</label>
		<graphicData>
			<texPath>Things/Ammo/Pistol/FMJ</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.11</MarketValue>
		</statBases>
		<ammoClass>FullMetalJacket</ammoClass>
		<cookOffProjectile>Bullet_50GI_FMJ</cookOffProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="50GIBase" MayRequire="cgf1.gunsgalore.magnum.i">
		<defName>Ammo_50GI_AP</defName>
		<label>.50 GI cartridge (AP)</label>
		<graphicData>
			<texPath>Things/Ammo/Pistol/AP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.11</MarketValue>
		</statBases>
		<ammoClass>ArmorPiercing</ammoClass>
		<cookOffProjectile>Bullet_50GI_AP</cookOffProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="50GIBase" MayRequire="cgf1.gunsgalore.magnum.i">
		<defName>Ammo_50GI_HP</defName>
		<label>.50 GI cartridge (HP)</label>
		<graphicData>
			<texPath>Things/Ammo/Pistol/HP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.11</MarketValue>
		</statBases>
		<ammoClass>HollowPoint</ammoClass>
		<cookOffProjectile>Bullet_50GI_HP</cookOffProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base50GIBullet" ParentName="BaseBulletCE" Abstract="true" MayRequire="cgf1.gunsgalore.magnum.i">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>42</speed>
			<dropsCasings>true</dropsCasings>
			<casingMoteDefname>Fleck_PistolAmmoCasings</casingMoteDefname>
			<casingFilthDefname>Filth_PistolAmmoCasings</casingFilthDefname>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base50GIBullet" MayRequire="cgf1.gunsgalore.magnum.i">
		<defName>Bullet_50GI_FMJ</defName>
		<label>.50 GI bullet (FMJ)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>11</damageAmountBase>
			<armorPenetrationSharp>4.5</armorPenetrationSharp>
			<armorPenetrationBlunt>8.38</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base50GIBullet" MayRequire="cgf1.gunsgalore.magnum.i">
		<defName>Bullet_50GI_AP</defName>
		<label>.50 GI bullet (AP)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>7</damageAmountBase>
			<armorPenetrationSharp>9</armorPenetrationSharp>
			<armorPenetrationBlunt>8.38</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base50GIBullet" MayRequire="cgf1.gunsgalore.magnum.i">
		<defName>Bullet_50GI_HP</defName>
		<label>.50 GI bullet (HP)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>14</damageAmountBase>
			<armorPenetrationSharp>2.5</armorPenetrationSharp>
			<armorPenetrationBlunt>8.38</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeBase" MayRequire="cgf1.gunsgalore.magnum.i">
		<defName>MakeAmmo_50GI_FMJ</defName>
		<label>make .50 GI cartridge x500</label>
		<description>Craft 500 .50 GI cartridges.</description>
		<jobString>Making .50 GI cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>26</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_50GI_FMJ>500</Ammo_50GI_FMJ>
		</products>
		<workAmount>2600</workAmount>
	</RecipeDef>

