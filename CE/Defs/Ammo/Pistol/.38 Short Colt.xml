	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_38ShortColt</defName>
		<label>.38 Short Colt</label>
		<ammoTypes>
			<Ammo_38ShortColt_FMJ>Bullet_38ShortColt_FMJ</Ammo_38ShortColt_FMJ>
