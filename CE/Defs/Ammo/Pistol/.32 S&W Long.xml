	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
		<defName>AmmoSet_32SWLong</defName>
		<label>.32 S&amp;W Long</label>
		<ammoTypes>
			<Ammo_32SWLong_FMJ>Bullet_32SWLong_FMJ</Ammo_32SWLong_FMJ>
			<Ammo_32SWLong_AP>Bullet_32SWLong_AP</Ammo_32SWLong_AP>
			<Ammo_32SWLong_HP>Bullet_32SWLong_HP</Ammo_32SWLong_HP>			
		</ammoTypes>
		<similarTo>AmmoSet_Pistol</similarTo>
	</CombatExtended.AmmoSetDef>
	
	<CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
