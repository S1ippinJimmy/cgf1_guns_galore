	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base32SWLongBullet" ParentName="BaseBulletCE" Abstract="true" MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>47</speed>
			<dropsCasings>true</dropsCasings>
			<casingMoteDefname>Fleck_PistolAmmoCasings</casingMoteDefname>
			<casingFilthDefname>Filth_PistolAmmoCasings</casingFilthDefname>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base32SWLongBullet" MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
		<defName>Bullet_32SWLong_FMJ</defName>
		<label>.32 S&amp;W Long bullet (FMJ)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>7</damageAmountBase>
			<armorPenetrationSharp>3</armorPenetrationSharp>
			<armorPenetrationBlunt>3.26</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base32SWLongBullet" MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
		<defName>Bullet_32SWLong_AP</defName>
		<label>.32 S&amp;W Long bullet (AP)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>4</damageAmountBase>
			<armorPenetrationSharp>6</armorPenetrationSharp>
			<armorPenetrationBlunt>3.26</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base32SWLongBullet" MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
		<defName>Bullet_32SWLong_HP</defName>
		<label>.32 S&amp;W Long bullet (HP)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>9</damageAmountBase>
			<armorPenetrationSharp>1.5</armorPenetrationSharp>
			<armorPenetrationBlunt>3.26</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

