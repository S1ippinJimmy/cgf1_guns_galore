	<ThingDef Class="CombatExtended.AmmoDef" Name="32SWLongBase" ParentName="SmallAmmoBase" Abstract="True" MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
		<description>Low caliber handgun cartridge used in old revolvers.</description>
		<statBases>
			<Mass>0.01</Mass>
			<Bulk>0.01</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo32SWLong</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="32SWLongBase" MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
		<defName>Ammo_32SWLong_FMJ</defName>
		<label>.32 S&amp;W Long cartridge (FMJ)</label>
		<graphicData>
			<texPath>Things/Ammo/Rifle/FMJ</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.04</MarketValue>
		</statBases>
		<ammoClass>FullMetalJacket</ammoClass>
		<cookOffProjectile>Bullet_32SWLong_FMJ</cookOffProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="32SWLongBase" MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
		<defName>Ammo_32SWLong_AP</defName>
		<label>.32 S&amp;W Long cartridge (AP)</label>
		<graphicData>
			<texPath>Things/Ammo/Pistol/AP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.04</MarketValue>
		</statBases>
		<ammoClass>ArmorPiercing</ammoClass>
		<cookOffProjectile>Bullet_32SWLong_AP</cookOffProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="32SWLongBase" MayRequire="cgf1.gunsgalore.copsandrobbers.coldwar">
