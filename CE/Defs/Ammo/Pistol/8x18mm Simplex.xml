	<ThingDef Class="CombatExtended.AmmoDef" Name="8x18mmSimplexBase" ParentName="SmallAmmoBase" Abstract="True" MayRequire="cgf1.gunsgalore.greatwar.centralpowers">
		<description>Old low-power handgun cartridge made for use in semi-automatic pistols.</description>
		<statBases>
			<Mass>0.008</Mass>
			<Bulk>0.01</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting</li>
