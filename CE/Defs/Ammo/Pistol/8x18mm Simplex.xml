	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base8x18mmSimplexBullet" ParentName="BaseBulletCE" Abstract="true" MayRequire="cgf1.gunsgalore.greatwar.centralpowers">
		<graphicData>
			<texPath>Things/Projectile/Bullet_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>49</speed>
			<dropsCasings>true</dropsCasings>
			<casingMoteDefname>Fleck_PistolAmmoCasings</casingMoteDefname>
			<casingFilthDefname>Filth_PistolAmmoCasings</casingFilthDefname>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base8x18mmSimplexBullet" MayRequire="cgf1.gunsgalore.greatwar.centralpowers">
		<defName>Bullet_8x18mmSimplex_FMJ</defName>
		<label>8x18mm Simplex bullet (FMJ)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>6</damageAmountBase>
			<armorPenetrationSharp>1.5</armorPenetrationSharp>
			<armorPenetrationBlunt>2.68</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base8x18mmSimplexBullet" MayRequire="cgf1.gunsgalore.greatwar.centralpowers">
