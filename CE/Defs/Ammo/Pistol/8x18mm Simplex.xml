	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.greatwar.centralpowers">
		<defName>AmmoSet_8x18mmSimplex</defName>
		<label>8x18mm Simplex</label>
		<ammoTypes>
			<Ammo_8x18mmSimplex_FMJ>Bullet_8x18mmSimplex_FMJ</Ammo_8x18mmSimplex_FMJ>
			<Ammo_8x18mmSimplex_AP>Bullet_8x18mmSimplex_AP</Ammo_8x18mmSimplex_AP>
