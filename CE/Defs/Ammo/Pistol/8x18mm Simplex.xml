		<description>Craft 500 8x18mm Simplex cartridges.</description>
		<jobString>Making 8x18mm Simplex cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_8x18mmSimplex_FMJ>500</Ammo_8x18mmSimplex_FMJ>
