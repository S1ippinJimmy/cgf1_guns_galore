		<thingCategories>
			<li>Ammo8x18mmSimplex</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="8x18mmSimplexBase" MayRequire="cgf1.gunsgalore.greatwar.centralpowers">
