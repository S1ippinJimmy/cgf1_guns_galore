	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef MayRequire="cgf1.gunsgalore.magnum.i">
		<defName>AmmoSet_357AMP</defName>
		<label>.357 AMP</label>
		<ammoTypes>
			<Ammo_357AMP_FMJ>Bullet_357AMP_FMJ</Ammo_357AMP_FMJ>
