	<!-- The amount of arrows usable over the ammo lifetime for each resource cost is equal to
		[r / (1 - x)];
			x = preExplosionSpawnChance,
			r = resource cost. -->

	<ThingDef ParentName="BaseArbalestBoltProjectile" MayRequire="cgf1.meleegalore.medieval.i">
		<defName>Projectile_ArbalestBolt_Stone</defName>
		<label>arbalest bolt (stone)</label>
