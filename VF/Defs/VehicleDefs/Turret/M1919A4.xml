<Defs>
	<Vehicles.VehicleTurretDef Name="CGF1_MWP_Vehicle_TurretGun_M1919A4_" ParentName="VehicleTurretBase">
		<defName>CGF1_MWP_Vehicle_TurretGun_M1919A4_</defName>
		<label>M1919A4</label>
		<description>.30-06 MMG. Requires steel to refurbish its barrel after heavy use.</description>
		
		<turretType>Rotatable</turretType>
		<shotSound>CGF1_MWP_SFX_MG_Light6</shotSound>
		<!--<reloadSound>VVE_BulldogReloadSound</reloadSound>-->
		<gizmoIconTexPath>CGF1/Vehicle/Turret/Coax/Browning_M1919A4</gizmoIconTexPath>
		
		<projectile>CGF1_MWP_Bullet_3006Springfield_Auto</projectile>
		<reloadTimer>2.4</reloadTimer>
		<warmUpTimer>1.6</warmUpTimer>
		
		<chargePerAmmoCount>1</chargePerAmmoCount>
		
		<magazineCapacity>250</magazineCapacity>
		<genericAmmo>true</genericAmmo>
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>2</rotationSpeed>
		
		<projectileOffset>2</projectileOffset>
		
		<maxRange>36.9</maxRange>
		
		<recoil>
			<distanceTotal>0.10</distanceTotal>
			<distancePerTick>0.04</distancePerTick>
			<speedMultiplierPostRecoil>0.15</speedMultiplierPostRecoil>
		</recoil>
		
		<fireModes>
			<li>
				<shotsPerBurst>14</shotsPerBurst>
				<ticksBetweenShots>9</ticksBetweenShots>
				<ticksBetweenBursts>75</ticksBetweenBursts>
				<spreadRadius>1.8</spreadRadius>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>

				<accuracyTouch>0.40</accuracyTouch>
				<accuracyShort>0.60</accuracyShort>
				<accuracyMedium>0.60</accuracyMedium>
				<accuracyLong>0.50</accuracyLong>
			</li>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<ticksBetweenShots>10</ticksBetweenShots>
				<ticksBetweenBursts>20</ticksBetweenBursts>
				<label>Single Shot</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
				
				<accuracyTouch>0.28</accuracyTouch>
				<accuracyShort>0.72</accuracyShort>
				<accuracyMedium>0.66</accuracyMedium>
				<accuracyLong>0.50</accuracyLong>
			</li>
			
		</fireModes>

		<graphicData>
			<texPath>CGF1/Vehicle/Turret/M1919A4</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>Cutout</shaderType>
			<drawSize>(1.3, 1.3)</drawSize>
		</graphicData>
		
		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
