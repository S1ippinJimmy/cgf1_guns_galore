				<ticksBetweenShots>7</ticksBetweenShots>
				<ticksBetweenBursts>72</ticksBetweenBursts>
				<spreadRadius>1.9</spreadRadius>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>

				<accuracyTouch>0.28</accuracyTouch>
				<accuracyShort>0.72</accuracyShort>
