<?xml version="1.0" encoding="utf-8"?>

<Defs>
	
	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>CGF1_MWP_Vehicle_TurretGun_L6WOMBAT_</defName>
		<label>L6 WOMBAT</label>
		<description>120mm recoilless rifle. Requires steel to refurbish its barrel after heavy use.</description>
		
		<turretType>Rotatable</turretType>
		<shotSound>CGF1_MWP_SFX_Launcher_LAW</shotSound>
		<!--<reloadSound>VVE_BulldogReloadSound</reloadSound>-->
		<gizmoIconTexPath>CGF1/Vehicle/Turret/Coax/L6_Wombat</gizmoIconTexPath>
		
		<projectile>CGF1_MWP_Shell_120mm_BAT_</projectile>
		<reloadTimer>5</reloadTimer>
		<warmUpTimer>3.4</warmUpTimer>
		<magazineCapacity>1</magazineCapacity>
		<chargePerAmmoCount>8</chargePerAmmoCount>
		<genericAmmo>true</genericAmmo>
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>1.6</rotationSpeed>
		
		<projectileOffset>3.25</projectileOffset>
		<maxRange>45.9</maxRange>
		<minRange>3.9</minRange>
		
		<recoil>
			<distanceTotal>0.3</distanceTotal>
			<distancePerTick>0.2</distancePerTick>
			<speedMultiplierPostRecoil>0.35</speedMultiplierPostRecoil>
		</recoil>
		
		<fireModes>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<ticksBetweenBursts>1</ticksBetweenBursts>
				<spreadRadius>4</spreadRadius>
				<label>Single Shot</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
		</fireModes>
		
		<graphicData>
			<texPath>CGF1/Vehicle/Turret/L6_Wombat_M8C</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>Cutout</shaderType>
			<drawSize>(2.4, 2.4)</drawSize>
		</graphicData>
		
		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
		
		<!--<motes>
			<li>
				<cycles>1</cycles>
				<moteDef>Mote_CannonPlume</moteDef>
				<animationType>Reset</animationType>
			</li>
		</motes>-->
	</Vehicles.VehicleTurretDef>
</Defs>