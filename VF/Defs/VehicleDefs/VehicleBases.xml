<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<Vehicles.VehicleDef Name="CGF1_MWP_VehiclePawn_Land" ParentName="BaseVehiclePawn" Abstract="True">
		<properties>
			<worldSpeedMultiplier>1</worldSpeedMultiplier>
		</properties>
		
		<vehicleStats>
			<AccelerationRate MayRequire="OskarPotocki.VanillaVehiclesExpanded">0.03</AccelerationRate>
		</vehicleStats>
		
		<comps>
			<li MayRequire="OskarPotocki.VanillaVehiclesExpanded" Class="VanillaVehiclesExpanded.CompProperties_VehicleMovementController"></li>
		</comps>
	</Vehicles.VehicleDef>
	
	<Vehicles.VehicleDef Name="CGF1_MWP_VehiclePawn_Car" ParentName="CGF1_MWP_VehiclePawn_Land" Abstract = "True">
