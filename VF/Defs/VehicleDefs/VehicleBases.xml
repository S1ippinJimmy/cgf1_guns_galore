			<customTerrainCosts DisallowTerrainWithTag="Water"/>
		</properties>
		
		<soundOneShotsOnEvent Inherit = "False">
			<li>
				<key>PawnEntered</key>
				<value>CGF1_GG_SFXR_OneShot_Door_Car</value>
			</li>
			<li>
				<key>PawnExited</key>
				<value>CGF1_GG_SFXR_OneShot_Door_Car</value>
			</li>
			<li>
				<key>IgnitionOn</key>
				<value>CGF1_GG_SFXR_OneShot_Start_Car</value>
			</li>
			<li>
				<key>IgnitionOff</key>
				<value>CGF1_GG_SFXR_OneShot_Stop_Car</value>
			</li>
		</soundOneShotsOnEvent>
	</Vehicles.VehicleDef>
	
